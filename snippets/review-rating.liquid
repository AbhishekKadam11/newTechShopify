{% comment %}
  Display rating of product

  Accepts:
  - rating: {Number} rating
  
  Usage:
  {% render 'review-rating' rating: rating %}
{% endcomment %}

{% liquid
  assign rating_decimal = 0
  assign decimal = product.metafields.custom.rating.value | modulo: 1
  assign rating_value = product.metafields.custom.rating.value 
  if decimal >= 0.3 and decimal <= 0.7
    assign rating_decimal = 0.5
  elsif decimal > 0.7
    assign rating_decimal = 1
  endif
  assign scale_max = 5
  assign scale_min = 0
  assign rating_val = rating_value
%}
{% comment %} text-yellow-300 {% endcomment %}
<div class="rating-wrapper flex">
  {% for i in (1..scale_max) %}
 
    <div class="flex-wrap flex-col items-center">
      {% if i <= rating_val %}
       {% assign star_color = 'text-yellow-300'  %}
      {% else %}
        {% assign star_color = 'text-gray-300'  %}
      {% endif %}
      <svg class="w-4 h-4 {{ star_color }} ms-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 22 20">
        <path d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z"/>
      </svg>
    </div>
  {% endfor %}
</div>

  {% comment %} <div
    class="rating"
    role="img"
    aria-label="{{ 'accessibility.star_reviews_info' | t: rating_value: product.metafields.custom.rating.value, rating_max: scale_max }}"
  > 
    <span
      aria-hidden="true"
      class="rating-star"
      style="--rating: {{ product.metafields.custom.rating.value | floor }}; --rating-max: {{ scale_max}}; --rating-decimal: {{ rating_decimal }};"
    ></span>
  </div>
  <p class="rating-text caption">
    <span aria-hidden="true">
      {{- product.metafields.custom.rating.value }} / {{ scale_max -}}
    </span>
  </p>
  <p class="rating-count caption">
    {% comment %} <span aria-hidden="true">({{ product.metafields.custom.rating_count }})</span> {% endcomment %}
    <span class="visually-hidden">
      {{- product.metafields.custom.rating_count }}
      {{ 'accessibility.total_reviews' | t -}}
    </span>
  </p> {% endcomment %}